<div class="text-center">
  <h1><%=@todo.name%></h1>
</div>
<div class="card">
  <div class="card-header">
    <h3>
      <%= "##{@todo.id} #{@todo.name}" %>
    </h3>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-6">
        <%= image_tag @todo.picture, class:'img-fluid' %>
      </div>
      <div class=" text-center col-md-6">
        <h3>Usuarios listos:</h3>
          <% @ready_users.each do |user| %>
            <br>
            <h5><%= user.email %></h5>
          <% end %>
      </div>
    </div>
    <br>
    <%= link_to '<<Volver', root_path, class:'btn btn-secondary btn-lg' %>
  </div>
</div>
<br>
